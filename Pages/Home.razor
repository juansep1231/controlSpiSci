@using BlazorFormularioDemo.Models

@page "/"


<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<h3>Formulario</h3>

<EditForm Model="formData" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
   

    <div>
        <label for="monto">Monto:</label>
        <InputNumber id="monto" @bind-Value="formData.Monto" />
        <ValidationMessage For="() => formData.Monto" />
    </div>

    <div>
        <label for="corte">Corte:</label>
        <InputText id="corte" @bind-Value="formData.Corte" />
        <ValidationMessage For="() => formData.Corte" />
    </div>

    <div>
        <label for="fecha">Fecha:</label>
        <InputDate id="fecha" @bind-Value="formData.Fecha" />
        <ValidationMessage For="() => formData.Fecha" />
    </div>

    <button type="submit">Enviar</button>
</EditForm>

@code {
    private FormData formData = new FormData();
    private void HandleValidSubmit()
    {
        // Lógica para manejar el envío de datos
        Console.WriteLine("Formulario enviado exitosamente");
        Console.WriteLine($"Monto: {formData.Monto}");
        Console.WriteLine($"Corte: {formData.Corte}");
        Console.WriteLine($"Fecha: {formData.Fecha}");
    }
}
